debug()
  *
    outline 1px solid teal
    & *
      outline 1px solid lightblue
      & *
        outline 1px solid purple

size($height, $width)
  height $height
  width $width


circle($size)
  height $size
  width $size


clearfix()
  &:after
    content ""
    display table
    clear both


center()
  bottom 0
  left 0
  margin auto
  position absolute
  right 0
  top 0



  
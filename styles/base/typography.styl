h1
  margin 0

.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

p
  font-size 1.4rem
  line-height 1.6
  margin-bottom 3rem

.subheader
  font-size 1.8rem
  font-weight 300
  margin 0
  margin-bottom 5rem
  text-align center
  strong
    font-weight 500

.subheader-btn
  margin-bottom 3rem
  text-align right

h2
  font-weight 400
  font-size 2.4rem


.text-primary
  color $primary


.uppercase
  text-transform uppercase

@media(max-width 1200px)
  .h2
    padding 0

@media(max-width 768px)
  .h2
    font-size 3rem
    margin-bottom 1.6rem
    text-align left
  .subheader
    font-size 1.4rem
    text-align left
    &-btn
      text-align left
  p
    font-size 1.4rem

